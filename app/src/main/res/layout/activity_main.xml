<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="us.fishops.android.fishops.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="false">
        <Button
            android:layout_width= "0dp"
            android:layout_height="180dp"
            android:layout_weight=".50"
            android:background="#1B2533"
            android:text="@string/title_activity_maps"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/mpa_btn"
            android:onClick="goToMap" />
        <Button
            android:layout_width= "0dp"
            android:layout_height="180dp"
            android:layout_weight = ".50"
            android:background="#555423"
            android:text="@string/title_activity_weather"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/weather_btn"
            android:onClick="goToMap"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="180dp"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:background="#88865D"
            android:text="@string/title_activity_laws"
            android:onClick="loadLaws"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/laws_btn" />
        <Button
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="match_parent"
            android:background="#31A2DC"
            android:text="@string/title_activity_resources"
            android:onClick="loadResources"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:id="@+id/resources_btn" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1B2533"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:src="@drawable/fishops_logo_v4_sm"/>
    </LinearLayout>
</RelativeLayout>
